<div class="container bg-image d-flex pt-4 text-white">
  <div class="mx-auto d-flex flex-column align-items-center text-center">
    <h1 class="mb-4" data-controller="search">
      <span class="" data-search-target="location">
        <i class="fa-solid fa-location-dot mx-3"></i>
        <%= @location.titleize %>
        <i class="mx-2 fa-solid fa-pencil" data-action="click->search#toggle"></i>
      </span>
      <%= form_tag("/", method: "get", class:"position-relative d-none", "data-search-target": "form" ) do %>
        <i class="position-absolute -start-4 fa-solid fa-location-dot mx-3"></i>
        <div class="input-group mb-3">
          <%= text_field_tag(:location, @location, class:"form-control bg-transparent text-white border-0 border-bottom") %>
          <%= submit_tag("Search", class: "btn btn-outline-light") %>
        </div>
      <% end %>
    </h1>
    <i class="wi <%= weather_icon(@weather[:weathercode]) %> fs-1 border border-4 border-white rounded-circle p-4 m-4"></i>
    <h2><%= weather_description(@weather[:weathercode]) %></h2>
    <dl class="mt-5 fs-4">
      <dt>Wind</dt>
      <dd><%= @weather[:windspeed].round %> km/h</dd>
      <dt>Avg. Temperature</dt>
      <dd><%= @weather[:temp].round %> Â°C</dd>
      <dt>Rainfall</dt>
      <dd><%= @weather[:precipitation].round %> mm</dd>
    </dl>
  </div>
</div>

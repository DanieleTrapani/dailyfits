<div class="container bg-image d-flex pt-4 text-white">
  <div class="mx-auto d-flex flex-column align-items-center text-center">
    <h1 class="position-relative mb-4"><i class="position-absolute -start-4 fa-solid fa-location-dot mx-3"></i><%= @weather[:location].titleize %></h1>
    <i class="wi <%= @weather[:icon] %> fs-1 border border-4 border-white rounded-circle p-4 m-4"></i>
    <h2><%= @weather[:description] %></h2>
    <dl class="mt-5 fs-4">
      <dt>Wind</dt>
      <dd><%= @weather[:wind] %></dd>
      <dt>Temperature</dt>
      <dd><%= @weather[:temp] %></dd>
      <dt>Rainfall</dt>
      <dd><%= @weather[:rainfall] %></dd>
    </dl>
  </div>
</div>

<div class="container">
  <div id="outfitCarousel" class="carousel slide" data-ride="carousel" width="400" height="300">
    <div class="carousel-inner">
      <% @outfit.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= "active" if index == 0 %> " >
        <%= cl_image_tag photo.key, width: 400, height: 300, crop: :fill %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#outfitCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#outfitCarousel" data-bs-slide="prev">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
  </div>
  <div id="details">
    <p> <%= @outfit.description %> </p>
  </div>
</div>

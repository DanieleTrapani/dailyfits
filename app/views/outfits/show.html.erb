<%#= render header ???? %>
<div class="bg-image">
  <div class="container" style="padding-left: 0px; padding-right: 0px; padding-top: 60px">
    <div id="outfitCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @outfit.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= "active" if index == 0 %> " >
            <%= cl_image_tag photo.key, width: 400, height: 400, crop: :fill %>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#outfitCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#outfitCarousel" data-bs-slide="prev">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
    </div>
    <div id="tag-display"  class="d-flex justify-content-between" style="padding-left: 10px; padding-right: 10px; padding-top: 5px">
      <h4 class="btn border light align-text-center sm-font"><%= @outfit.tag.temperature %></h4>
      <h4 class="btn border light align-text-center sm-font"><%= @outfit.tag.wind %> wind</h4>
      <h4 class="btn border light align-text-center sm-font"><%= @outfit.tag.rain %> rain</h4>
    </div>
    <div id="details" class="text-justify" style="padding-left: 20px">
      <p> <%= @outfit.description %> </p>
    </div>
  </div>
</div>

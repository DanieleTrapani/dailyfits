<%= simple_form_for @outfit do |f| %>
  <%# <input class="form-control file optional" type="file" name="outfit[photo]" id="outfit_photo" accept="image/*"> %>
  <%= f.input :photos, as: :file, input_html: {multiple: true} %>
  <%= f.input :description, placeholder: "Write a caption...", label: false %>
  <%= f.input :day,
        as: :string,
        input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit "Upload" %>
<% end %>

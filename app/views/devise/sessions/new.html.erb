<div class="container py-3 devise">
  <%= link_to :back do %>
    <i class="fa-solid fa-xl fa-chevron-left"></i>
  <% end %>
  <h2 class="my-3">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs text-white">
      <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: {
                autocomplete: "email",
                class: 'bg-transparent border-0 border-bottom',
            } %>
      <%= f.input :password,
                required: false,
                input_html: {
                    autocomplete: "current-password",
                    class: 'bg-transparent border-0 border-bottom'
            } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn light sm-font' %>
    </div>
  <% end %>
</div>

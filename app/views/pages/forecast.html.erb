<div class="container d-flex pt-4 text-white">
  <div class="mx-auto d-flex flex-column align-items-center">
    <h5 class="mb-4" data-controller="search">
      <span class="" data-search-target="location">
        <i class="fa-solid fa-location-dot mx-3"></i>
        <%= @location.titleize %>
        <i class="mx-2 fa-solid fa-magnifying-glass fa-xs" data-action="click->search#toggle"></i>
      </span>
      <%= form_tag("/", method: "get", class:"d-none", "data-search-target": "form" ) do %>
        <div class="input-group mb-3">
          <%= text_field_tag(:location, @location, class:"form-control bg-transparent text-white border-0 border-bottom") %>
          <%= button_tag class: "btn btn-outlign-light" do %>
            <i class="fa-solid fa-lg fa-magnifying-glass"></i>
          <% end %>
        </div>
      <% end %>
    </h5>
    <i class="wi <%= weather_icon(@forecast[:weathercode][1]) %> fs-1 border border-4 border-white rounded-circle p-4 m-4"></i>
    <p>Tomorrow</p>
    <h2><%= weather_description(@forecast[:weathercode][1]) %>, <%= @forecast[:temp][1].round %> °C</h2>
    <div class="mt-5 fs-4">
      <% (2..6).each do |i| %>
        <div class="row py-1 mb-3">
          <div class="col-4 justify-content-start">
            <%= @forecast[:days][i].to_date.strftime("%a") %>
          </div>
          <div class="col-3">
            <i class="wi <%= weather_icon(@forecast[:weathercode][i]) %> fs-1"></i>
          </div>
          <div class="col-5">
            <%= @forecast[:temp][i].round %> °C
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
